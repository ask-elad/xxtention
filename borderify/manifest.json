{
  "manifest_version": 3,
  "name": "BeatCode",
  "version": "1.0",
  "description": "Automatically pushes LeetCode accepted submissions to GitHub.",

  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "scripting",
    "identity",
    "notifications"
  ],

  "host_permissions": [
    "https://leetcode.com/*",
    "https://github.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "BeatCode"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
