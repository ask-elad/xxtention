{
  "manifest_version": 2,
  "name": "BeatCode",
  "version": "1.0",
  "description": "Automatically pushes LeetCode accepted submissions to GitHub.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "identity",
    "notifications",
    "https://leetcode.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "scripts": [
      "utils/github.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_title": "BeatCode"
  },
  "options_page": "option.html"
}
