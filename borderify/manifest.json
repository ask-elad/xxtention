{
  "manifest_version": 2,
  "name": "BeatCode",
  "version": "1.0",
  "description": "Automatically pushes LeetCode accepted submissions to GitHub.",

  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "identity",
    "notifications",
    "https://leetcode.com/*",
    "https://github.com/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "BeatCode"
  }
}
